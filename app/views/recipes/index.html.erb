<section class="my-blog bg-secondary bg-gradient">
    <div class="container">
		<div class="row add-recipe-action-container">
			<div class="col-xl-5 col-lg-6 col-md-8">
				<div class="section-title text-center title-ex1">
					<%= link_to 'Add New recipe', new_recipe_path, class:'btn btn-primary'%>
				</div>
			</div>
		</div>
		<div class="row">
			<% @recipes.each do |recipe| %>
            	<%= render partial: 'recipe', locals: { recipe: recipe } %>
			<% end %>
		</div>    
	</div>
</section>