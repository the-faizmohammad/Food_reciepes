<div class="new-food-container">
  <h2>Add Ingredients needed for Recipe</h2>

  <%= form_with(model: [@recipe, @recipe_food], local: true, id: "recipe-add-food-form") do |form| %>
    <div class="field">
      <%= form.label :food_id, "Food" %>
      <%= form.collection_select(:food_id, Food.all, :id, :name, prompt: "Select food Item") %>
    </div>
    <div class="field">
      <%= form.label :quantity %>
      <%= form.number_field :quantity %>
    </div>

    <%= form.submit "Add Food", id: "add-food-action" %>
  <% end %>
</div>